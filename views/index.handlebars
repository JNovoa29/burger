<div class = "container">
    <div class = "jumbotron">
        <h1 id = "kburg">Kawaii Burger</h1>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h4 class="title">Eat Me!</h4>
            <hr>
            <ul class="list-group">
                {{#each burgers}} {{#unless this.devoured}}
                <li class="list-group-item">
                    <h4 class="name">{{this.burger_name}}</h4>
                    <form action="/{{this.id}}?_method = PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button class="form-control" type="submit">sdfhgs</button>
                    </form>
                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>

        <div class="col-md-6">
            <h4 class="title">All Gone!</h4>
            <hr>
            <ul class="list-group">
                {{#each burgers}} {{#if this.devoured}}
                <li class="list-group-item">
                    <h4 class="name">{{this.burger_name}}</h4>
                    <form action="/{{this.id}}?_method = PUT" method="POST">
                        <input type="hidden" name="devoured" value="false">
                        <button class="btn btn-danger form-control" type="submit">Nom Nom!</button>
                    </form>
                </li>
                {{/if}} {{/each}}
            </ul>
        </div>
    </div>

<div class = "container">
    <div class = "col-md-12" id = "user-input">
        <form class = "update-form" action = "/" method = "POST">
        <div class = "form-group">
            <label for = "bur"><h3 class = "name">What kind of burger do you want?</h3></label>
            <input class = "form-control" type = "text" id = "bur" type = "submit" name = "burger_name" placeholder = "Get creative...">
        </div>

        <button class = "btn btn-success form-control" type = "submit" name = "devoured" value = "0">Add It!</button>
        </form>
    </div>
</div>

