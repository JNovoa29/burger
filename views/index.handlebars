<div class="row">
    <div class="col-md-6">
        <h4 class="title">Hungry?!</h4>
        <div id="eat">
            {{#each burgers}} {{#unless devoured}}
            <form action="burger/eat/{{id}}" method="POST">
                <div class="input-group">
                    <li class="form-control">{{id}}.{{burger_name}}</li>
                    <span class="inp-btn">
                        <button class="btn btn-success addbtn" type="submit">Nom Nom!</button>
                    </span>
                </div>
            </form>
            {{/unless}} {{/each}}
        </div>
    </div>

    <div class="col-md-6">
        <h4 class="title">Finished!</h4>
        <div id="eaten">
            {{#each burgers}}
                {{#if this.devoured}}
                    <div class = "input-group">
                        <li class = "form-control">{{this.id}}.{{this.burder_name}}</li>
                        <span class = "inp-btn">
                            <button class = "btn btn-danger nombtn">ASD</button>
                        </span>
                    </div>
                    {{/if}} {{/each}}
        </div>
    </div>
</div>